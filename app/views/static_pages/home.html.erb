<% if signed_in? %>
  <div class="row">
    <aside>
      <section class="span4">
        <%= render 'shared/user_documents' %>
      </section>
      <section class="span8">
        <%= render partial: 'shared/document_form', locals: { document: @document} %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Dot Grid Rails</h1>

    <h2>
      This is the home page for the
      <a href="http://powerful-atoll-6334.herokuapp.com/">Dot Grid Rails</a>
      application.
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("dot_grid.png", alt: "Dot Grid"), 'http://powerful-atoll-6334.herokuapp.com/' %>
<% end %>
